<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Odzyskiwanie hasła", new_password_path(resource_name) %><br />
<% end -%>

<%- if controller_name != 'sessions' %>
  <%= link_to "Zaloguj się", new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Zarejestruj się", new_registration_path(resource_name) %><br />
<% end -%>
